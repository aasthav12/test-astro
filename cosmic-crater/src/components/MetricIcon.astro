---
interface Props {
  name: "cash" | "pie" | "search" | "tag";
  size?: number | string;       
  color?: string;               
  strokeWidth?: number;         
}

const {
  name,
  size = 96,
  color = "#0E6A73",
  strokeWidth = 2
} = Astro.props as Props;
---

{ name === "cash" && (
  <svg width={size} height={size} viewBox="0 0 120 120" aria-hidden="true">
    <g fill="none" stroke={color} stroke-width={strokeWidth} stroke-linecap="round" stroke-linejoin="round">
      <rect x="30" y="36" rx="4" ry="4" width="60" height="36"/>
      <rect x="26" y="40" rx="4" ry="4" width="60" height="36" opacity="0.7"/>
      <rect x="22" y="44" rx="4" ry="4" width="60" height="36" opacity="0.4"/>
      <circle cx="60" cy="54" r="8"/>
    </g>
  </svg>
)}


{ name === "pie" && (
  <svg width={size} height={size} viewBox="0 0 120 120" aria-hidden="true">
    <g fill="none" stroke={color} stroke-width={strokeWidth} stroke-linecap="round" stroke-linejoin="round">
      <circle cx="60" cy="60" r="30" fill="none"/>
      <path d="M60 30 A30 30 0 0 1 90 60 L60 60 Z" fill="none"/>
      <path d="M60 60 L78 42" />
    </g>
  </svg>
)}

{ name === "search" && (
  <svg width={size} height={size} viewBox="0 0 120 120" aria-hidden="true">
    <g fill="none" stroke={color} stroke-width={strokeWidth} stroke-linecap="round" stroke-linejoin="round">
      <circle cx="54" cy="54" r="22" fill="none"/>
      <path d="M70 70 L92 92"/>
    </g>
  </svg>
)}

{ name === "tag" && (
  <svg width={size} height={size} viewBox="0 0 120 120" aria-hidden="true">
    <g fill="none" stroke={color} stroke-width={strokeWidth} stroke-linecap="round" stroke-linejoin="round">
      <path d="M28 46 L68 86 a6 6 0 0 0 8.5 0 L92 70 a6 6 0 0 0 0-8.5 L52 22 H34 a6 6 0 0 0-6 6 v18 z"/>
      <circle cx="44" cy="38" r="4" />
    </g>
  </svg>
)}
