---
interface Props {
  title?: string;
  icon?: "money" | "pie" | "inspect" | "tag";
  value?: string;
  caption?: string;
  deltaText?: string;
  deltaSign?: "up" | "down" | "neutral";

  // theming
  cardBg?: string;
  ink?: string;
  ribbonBg?: string;
  upColor?: string;
  downColor?: string;

  // layout
  iconSize?: string;  // px (string for consistency)
  radius?: string;
  padding?: string;
  minHeight?: string;
}

const {
  title = "Metric",
  icon = "money",
  value = "â€”",
  caption = "",
  deltaText = "",
  deltaSign = "neutral",

  cardBg = "#7FBFC6",
  ink = "#0E6A73",
  ribbonBg = "#FFFFFF",
  upColor = "#0E6A73",
  downColor = "#9A3D3D",

  iconSize = "72",
  radius = "12px",
  padding = "24px",
  minHeight = "220px",
} = Astro.props as Props;

const iconMap: Record<string, string> = {
  money: "/Money%20Icon.svg",              
  pie: "/Pie%20Icon.svg",               
  inspect: "/Inspect%20Icon.svg",
  tag: "/Tag%20Icon.svg",
};

const iconSrc = iconMap[icon];

const signClass = deltaSign === "up" ? "up" : deltaSign === "down" ? "down" : "neutral";
---

<article
  class="card"
  style={`--bg:${cardBg}; --ink:${ink}; --rib:${ribbonBg}; --up:${upColor}; --down:${downColor};
          --r:${radius}; --p:${padding}; --minh:${minHeight};`}
  role="group"
  aria-label={title}
>
  <div class="top">
    <header class="head">
      <h4 class="title">{title}</h4>
    </header>

    <div class="art">
      <img src={iconSrc} alt="" class="icon" loading="lazy" decoding="async" />
    </div>

    <div class="stat">
      <div class="value">{value}</div>
      {caption && <p class="caption">{caption}</p>}
    </div>
  </div>

  {deltaText && (
    <div class={`bottom ${signClass}`} aria-live="polite">
      {deltaText}
    </div>
  )}
</article>

<style>
  .card{
    background: var(--bg);
    color: var(--ink);
    border-radius: var(--r);
    min-height: var(--minh);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
    overflow: hidden; /* keep bottom white section inside rounded corners */
    box-shadow: 0 2px 0 rgba(0,0,0,.06) inset;
  }

  .top{
    padding: var(--p);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .head .title{
    margin: 0;
    font: 700 22px/1.2 Inter, system-ui, sans-serif;
    letter-spacing: .02em;
  }

  .art{
    margin: 4px 0 8px;
    display: flex;
    justify-content: center;
  }
  .icon{
    width: 72px;
    height: auto;
  }

  .value{
    margin: 0;
    font: 800 56px/1.05 "PPRightGroteskWide", Inter, system-ui, sans-serif;
    letter-spacing: .01em;
  }
  .caption{
    margin: 8px 0 0;
    font: 600 16px/1.3 Inter, system-ui, sans-serif;
    opacity: .9;
  }

  /* bottom white section inside the same card */
  .bottom{
    background: var(--rib);
    padding: 14px 16px;
    font: 700 14px/1.2 Inter, system-ui, sans-serif;
    letter-spacing: .01em;
    color: var(--up);
    border-top: 1px solid rgba(0,0,0,.08);
  }
  .bottom.down{ color: var(--down); }
  .bottom.neutral{ color: var(--ink); }

  @media (max-width: 720px){
    .value{ font-size: 44px; }
    .head .title{ font-size: 20px; }
  }
</style>
